<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent">
        <TextView
            android:background="@color/huixianshu"
            android:layout_gravity="center_horizontal"
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@mipmap/iconfontyao"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </FrameLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/chiyao_addremind_item_text1"
                android:textSize="14dp"
                android:text="3:20:24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/chiyao_addremind_item_text2"
                android:textSize="16dp"
                android:text="复用吗丁玲"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/change_info"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/id_text"
                android:textColor="@color/baise"
                android:textSize="0.3dp"
                android:layout_width="2dp"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/iconfontqianji"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="@color/huixianshu"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>