<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="?attr/actionModePasteDrawable"
        android:layout_alignParentTop="false"
        android:id="@+id/MoreInfoBlockItemImageView"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="false"
        android:layout_margin="10dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoreInfoBlockItemtInfoTV"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="more"
        android:layout_margin="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoreInfoBlockItemTitleTV"
        android:layout_toLeftOf="@id/MoreInfoBlockItemtInfoTV"
        android:layout_toRightOf="@id/MoreInfoBlockItemImageView"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:textSize="16sp" />

</RelativeLayout>